<div id="localization_settings">
  <button id="localization_settings_button"
          type="button"
          class="localization_settings_button btn btn-default"
          data-toggle="modal"
          data-target="#edit_localization_settings">
    <span id="selected_country">
      <%= selected_localization_settings.country&.name || "-" %> 
    </span>
    |
    <span id="selected_currency">
      <%= selected_localization_settings.currency.name %>
    </span>
    |
    <span id="selected_language">
      <%= selected_localization_settings.language.name %>
    </span>
  </button>
  <div id="edit_localization_settings"
       class="modal fade"
       tabindex="-1"
       role="dialog"
       aria-labelledby="localization_settings_title">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <%= form_for :localization_settings, method: :put, url: localization_settings_path do |form| %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" arial-lable="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="localization_settings_title">Change your settings</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <%= form.label :country_id, "Country" %>
              <%= form.select :country_id,
                country_select_options(selected_localization_settings.country_id),
                { include_blank: "-" },
                { class: 'form-control' } %>
            </div>
            <div class="form-group">
              <%= form.label :currency_id, "Currency" %>
              <%= form.select :currency_id,
                currency_select_options(selected_localization_settings.currency_id),
                { include_blank: false },
                { class: 'form-control' } %>
            </div>
            <div class="form-group">
              <%= form.label :language_id, "Language" %>
              <%= form.select :language_id,
                language_select_options(selected_localization_settings.language_id),
                { include_blank: false },
                { class: 'form-control' } %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
