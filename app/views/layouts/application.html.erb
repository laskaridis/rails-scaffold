<!DOCTYPE html>
<html>
<head>
  <title>Scaffold</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:error].present? %>
    <div class="alert alert-danger">
      <p><%= flash[:error] %></p>
    </div>
  <% end %>

  <% if flash[:warning].present? %>
    <div class="alert alert-warning">
      <p><%= flash[:warning] %></p>
    </div>
  <% end %>

  <% if flash[:success].present? %>
    <div class="alert alert-success">
      <p><%= flash[:success] %></p>
    </div>
  <% end %>

  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Project name</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav pull-right">

          <% if logged_out? %>
            <li role="presentation">
              <%= link_to t('buttons.register'), register_path %>
            </li>
            <li role="presentation">
              <%= link_to t('buttons.login'), login_path %>
            <li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle"
                          data-toggle="dropdown"
                          role="button"
                          aria-haspopup="true"
                          aria-expanded="false"><%= current_user.email %><span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li role="presentation">
                  <%= link_to t('buttons.profile'), user_profile_path %>
                </li>
                <li role="presentation">
                  <%= link_to "Messages", messages_path %>
                </li>
                <li role="separator" class="divider"></li>
                <li role="presentation">
                  <%= link_to t('buttons.logout'), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <%= yield %>

  </body>
</html>
