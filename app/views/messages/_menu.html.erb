<div class="text-center">
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#compose_message_modal">
  Compose new
</button>

<div class="modal fade" id="compose_message_modal" tabindex="-1" role="dialog" aria-labelledby="composeModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="composeModalLabel">New message</h4>
      </div>
      <%= form_for :message,
        url: messages_url,
        method: "post",
        class: "new_message",
        remote: true,
        html: { id: "new_message" } do |form| %>

        <div class="modal-body">
          <div class="form-group">
            <%= form.text_field :recipient_id, 
              class: 'form-control',
              placeholder: "Recipient",
              required: "required",
              autofocus: true %></div>
          <div class="form-group">
            <%= form.text_field :subject,
              class: 'form-control',
              placeholder: "Type your subject...",
              required: "required" %></div>
          <div class="form-group">
            <%= form.text_area :message,
              class: 'form-control',
              placeholder: "Type your message...",
              required: "required" %></div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Send</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>

<ul class="nav nav-pills nav-stacked">
  <li role="presentation" class="<%= 'active' if params[:q] == "inbox" %>">
    <%= link_to "Inbox", messages_path(q: "inbox") %>
  </li>
  <li role="presentation" class="<%= 'active' if params[:q] == "sent" %>">
    <%= link_to "Sent", messages_path(q: "sent") %>
  </li>
  <li role="presentation" class="<%= 'active' if params[:q] == "unread" %>">
    <%= link_to "Unread", messages_path(q: "unread") %>
  </li>
  <li role="presentation" class="<%= 'active' if params[:q] == "spam" %>">
    <%= link_to "Spam", messages_path(q: "spam") %>
  </li>
  <li role="presentation" class="<%= 'active' if params[:q] == "trash" %>">
    <%= link_to "Trash", messages_path(q: "trash") %>
  </li>
</ul>
