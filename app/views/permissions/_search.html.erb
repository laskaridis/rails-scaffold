<%= form_with(url: role_permissions_path(params[:role_id]), method: :get, class: "form-inline permission-search") do |form| %>
  <div class="form-group">
    <%= text_field_tag "filters[name]", name_filter_value, 
        placeholder: "Permission name",
        class: "form-control" %>
  </div>
  <div class="form-group">
    <%= text_field_tag "filters[resource]", resource_filter_value,
      placeholder: "Permission resource",
      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= text_field_tag "filters[action]", action_filter_value,
      placeholder: "Permission action",
      class: "form-control" %>
  </div>
  <%= button_tag "Search", class: "btn btn-primary" %>
  <%= button_tag "Clear", class: "btn btn-default" %>
<% end %>

