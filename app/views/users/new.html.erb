<div id="login" class="container">
<%= form_for @user, html: { class: "form-horizontal" } do |form| %>

  <legend><%= t 'headings.register' %></legend>

  <div class="form-group <%= 'has-error' if @user.errors.include?(:email) %>">
    <% if @user.errors.include?(:email) %>
      <p class="error-text text-center text-danger">
        <%= @user.errors.full_messages_for(:email).first %></p>
    <% end %>

    <%= form.email_field :email,
      class: 'form-control',
      placeholder: t('placeholders.email'),
      required: "required",
      autofocus: true %>
  </div>

  <div class="form-group <%= 'has-error' if @user.errors.include?(:password) %>">
    <% if @user.errors.include?(:password) %>
      <p class="error-text text-center text-danger">
        <%= @user.errors.full_messages_for(:password).first %></p>
    <% end %>

    <%= form.password_field :password,
      class: "form-control",
      required: "required",
      placeholder: t("placeholders.password") %>
  </div>

  <div class="form-group">
    <button class="btn btn-default btn-primary" type="submit">
      <%= t 'buttons.register' %>
    </button>
  </div>
  
  <p class="sub-text text-center">
    <%= t 'labels.user-agreement' %>
    <a href="#"><%= t 'links.policies.terms' %></a>,
    <a href="#"><%= t 'links.policies.cookies' %></a>
    <%= t 'labels.and' %>
    <a href="#"><%= t 'links.policies.privacy' %></a>.
  </p>
<% end %>
</div>
